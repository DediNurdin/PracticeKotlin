<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container_dg_pilih_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_penyimpanan_dg_pilih_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:elegantTextHeight="true"
                android:text="Penyimpanan"
                android:textSize="20sp"
                app:drawableEndCompat="@drawable/ic_baseline_view_list" />

            <TextView
                android:id="@+id/tv_kamera_dg_pilih_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:elegantTextHeight="true"
                android:text="Kamera"
                android:textSize="20sp"
                app:drawableEndCompat="@drawable/ic_baseline_camera" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>