<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:id="@+id/tgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icon_color"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_control"
            android:elegantTextHeight="true"
            android:text="Hari"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium" />

        <TextClock
            android:id="@+id/tc_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:elegantTextHeight="true"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_latihan_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tgl"
        android:layout_marginVertical="@dimen/spacing_standard">

        <Button
            android:id="@+id/latihan_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:text="Get &amp; View File"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_latihan_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_latihan_1"
        android:layout_marginVertical="@dimen/spacing_standard">

        <Button
            android:id="@+id/latihan_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:text="Get Lat Long"
            android:textAllCaps="false" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_latihan_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_latihan_2"
        android:layout_marginVertical="@dimen/spacing_standard"
        android:visibility="visible">

        <Button
            android:id="@+id/latihan_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:text="Check Fake GPS"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_latihan_3"
        android:layout_marginVertical="@dimen/spacing_standard"
        android:visibility="visible">

        <Button
            android:id="@+id/latihan_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:text="Messaging App"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>