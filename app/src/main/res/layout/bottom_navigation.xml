<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false"
    android:background="@drawable/bg_top_shadow"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/spacing_standard">

    <LinearLayout
        android:id="@+id/ll_home_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_main"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_home"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/tv_home_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:fontFamily="@font/googlesansmedium"
            android:layout_gravity="center"
            android:visibility="gone"
            android:drawablePadding="@dimen/spacing_standard"
            android:textSize="@dimen/font_size_medium"
            android:paddingStart="@dimen/spacing_standard"
            android:paddingEnd="@dimen/spacing_standard"
            android:textColor="?attr/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_message_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_message_main"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_6sdp"
                app:tint="@color/icon_color"
                app:srcCompat="@drawable/ic_person" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_message_main"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan"
            android:layout_gravity="center"
            android:textSize="@dimen/font_size_small"
            android:fontFamily="@font/googlesansmedium"
            android:paddingStart="@dimen/spacing_standard"
            android:paddingEnd="@dimen/spacing_standard"
            android:textColor="?attr/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_more_main"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_6sdp"
            app:tint="@color/icon_color"
            app:srcCompat="@drawable/ic_more_vert" />

        <TextView
            android:id="@+id/tv_more_main"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lainnya"
            android:fontFamily="@font/googlesansmedium"
            android:layout_gravity="center"
            android:textSize="@dimen/font_size_small"
            android:paddingStart="@dimen/spacing_standard"
            android:paddingEnd="@dimen/spacing_standard"
            android:textColor="?attr/colorPrimaryDark" />

    </LinearLayout>

</LinearLayout>